{
  "name": "solarflare",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test:run",
    "tywatch": "turbo typecheck -- --watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "publish:all": "turbo run typecheck lint test:run build --force && turbo run publish"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}